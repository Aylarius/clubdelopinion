{% extends 'base.html.twig' %}

{% block body %}
    <h1>Rcvl list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Soustitre</th>
                <th>Paragraph</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rcvl in rcvls %}
            <tr>
                <td><a href="{{ path('rcvl_show', { 'id': rcvl.id }) }}">{{ rcvl.id }}</a></td>
                <td>{{ rcvl.title }}</td>
                <td>{{ rcvl.soustitre }}</td>
                <td>{{ rcvl.paragraph }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('rcvl_show', { 'id': rcvl.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('rcvl_edit', { 'id': rcvl.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('rcvl_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
