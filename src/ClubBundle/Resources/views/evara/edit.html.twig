{% block body %}
    <h1>Mode édition</h1>

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}
    <h1>{{ evAra.title }}</h1><br>
    <span class="bold">Titre</span>
    {{ form_errors(edit_form.title) }}
    {{ form_widget(edit_form.title) }}
    <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <br>

    <div class="row center-block row-diners">
        {% for araEvenement in araEvenements %}
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                <div class="thumbnail">
                    <div class="caption">
                        <h4>{{ araEvenement.title }}</h4>
                        <p>{{ araEvenement.paragraph }}</p>
                        <br>
                        <a href="{{ path('araevenements_edit', { 'id': araEvenement.id }) }}">Modifier</a>
                    </div>
                </div>
            </div>
        {% endfor %}


        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <div class="thumbnail" id="thumbnail-membre">
                <div class="caption">
                    {{ form_start(new_form) }}
                    <span class="bold">Nom</span><br>
                    {{ form_errors(new_form.title) }}
                    {{ form_widget(new_form.title) }}
