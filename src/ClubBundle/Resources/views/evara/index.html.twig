{% extends 'base.html.twig' %}


{% block body %}

    {% for evAra in evAras %}
        <h1>{{ evAra.title }}</h1><br>
        <div class="row center-block row-diners">
            {% for araEvenement in araEvenements|sort %}

                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="thumbnail" id="thumbnail-membre">
                        <div class="caption">
                            <h4>{{ araEvenement.title }}</h4>
                            <p>{{ araEvenement.paragraph|raw }}</p>
                            <br>
                            <a id="btn-photo" href="{{ path('araevenements_show', { 'id': araEvenement.id }) }}"><p>Plus d'infos<span class="glyphicon glyphicon-share-alt"></span></p></a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
{% endblock %}
