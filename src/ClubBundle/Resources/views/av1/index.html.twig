                <td>{{ av1.paragraphAv1 }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('av1_show', { 'id': av1.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('av1_edit', { 'id': av1.id }) }}">edit</a>
