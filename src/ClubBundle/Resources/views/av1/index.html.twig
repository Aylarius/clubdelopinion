    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titleav1</th>
                <th>Paragraphav1</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for av1 in av1s %}
            <tr>
                <td><a href="{{ path('av1_show', { 'id': av1.id }) }}">{{ av1.id }}</a></td>
