{% extends 'base.html.twig' %}

{% block body %}

    {% for evSup in evSups %}
        <h1>{{ evSup.title }}</h1><br>
        <div class="row center-block row-diners">
            {% for supEvenement in supEvenements %}

                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="thumbnail" id="thumbnail-membre">
                        <div class="caption">
                            <h4>{{ supEvenement.title }}</h4>
                            <p>{{ supEvenement.paragraph|raw }}</p>
                            <br>
                            <a id="btn-photo" href="{{ path('supevenements_show', { 'id': supEvenement.id }) }}"><p>Plus d'infos<span class="glyphicon glyphicon-share-alt"></span></p></a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endfor %}


{% endblock %}
